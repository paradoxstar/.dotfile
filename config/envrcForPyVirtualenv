OLD_PYTHON=`which python`
VENV_PATH=`pwd`/.venv/

if [ ! -d "$VENV_PATH" ]; then
   virtualenv $VENV_PATH
fi

source $VENV_PATH/bin/activate
export LD_LIBRARY_PATH=$CONDA_PREFIX/lib:$LD_LIBRARY_PATH

NEW_PYTHON=`which python`

echo "Virtualenv changed"
echo "  from $OLD_PYTHON"
echo "  to   $NEW_PYTHON"
